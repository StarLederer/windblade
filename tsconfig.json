{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": [
      "node",
      "vite/client"
    ],
    "paths": {
      "@windblade/core": ["./packages/core/src/index.ts"],
      "@windblade/website": ["./packages/website/src/index.ts"],
      "@windblade/unocss-preset": ["./packages/unocss-preset/src/index.ts"],
      "@windblade/unocss-preset-color": ["./packages/unocss-preset-color/src/index.ts"],
      "@windblade/unocss-preset-dollars": ["./packages/unocss-preset-dollars/src/index.ts"],
      "@windblade/unocss-docs": ["./packages/unocss-docs/src/index.ts"]
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/client/**",
    "**/playground/**",
    "**/examples/**",
    "**/fixtures/**",
    "**/interactive/**",
    "**/test/dts/**",
    "./packages/website"
  ]
}
