{
  "name": "windblade",
  "type": "module",
  "version": "2.0.0-beta.4",
  "private": true,
  "packageManager": "pnpm@7.33.2",
  "scripts": {
    "taze": "taze minor -wIr && pnpm -r --parallel run update-post",
    "build": "rimraf packages/*/dist && pnpm -r --filter=./packages/* run build && pnpm -r run build-post",
    "dev": "pnpm stub",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "release": "bumpp -r",
    "stub": "pnpm -r --filter=./packages/* --parallel run stub",
    "typecheck": "tsc --noEmit && pnpm -r --parallel run typecheck"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.5",
    "@iconify-json/mdi": "^1.1.52",
    "@iconify-json/simple-icons": "^1.1.58",
    "@types/node": "^18.16.18",
    "@unocss/preset-icons": "^0.53.4",
    "@unocss/transformer-directives": "^0.53.4",
    "@unocss/vite": "0.53.4",
    "bumpp": "^9.1.1",
    "eslint": "^8.43.0",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.10.2",
    "typescript": "^5.1.3",
    "unbuild": "^1.2.1",
    "unocss": "~0.53.4",
    "vite": "^4.3.9",
    "vite-plugin-favicons-inject": "^2.2.0",
    "vite-plugin-solid": "^2.7.0"
  },
  "pnpm": {
    "overrides": {
      "magic-string": "^0.30.0"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
